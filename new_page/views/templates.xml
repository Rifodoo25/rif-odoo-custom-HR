<odoo>
  <template id="candidate_applications_template" name="Candidate Applications Status">
    <t t-call="website.layout">
      <div class="container mt16 mb16">
        <h1>Your Job Applications</h1>
        <t t-if="applicants">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Job Position</th>
                <th>Applied On</th>
                <th>Current Stage</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="applicants" t-as="applicant">
                <tr>
                  <td><t t-esc="applicant.job_id.name"/></td>
                  <td>
                    <t t-if="applicant.create_date">
                      <t t-esc="applicant.create_date.strftime('%Y-%m-%d')"/>
                    </t>
                    <t t-else="">N/A</t>
                  </td>
                  <td><t t-esc="applicant.stage_id.name or 'Not set'"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-else="">
          <p>You have no job applications yet.</p>
        </t>
      </div>
    </t>
  </template>
</odoo>
