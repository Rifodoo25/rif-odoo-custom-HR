<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_form_inherit_refuse" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit.refuse</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">

            
            <xpath expr="//button[@name='action_refuse']" position="replace">
                <button name="%(timeoff.action_leave_refuse_wizard)d"
                        string="Refuser"
                        type="action"
                        class="btn btn-secondary"
                        modifiers='{"invisible": [["state","not in",["confirm","validate1"]]]}'/>
            </xpath>

            <!-- Afficher la raison en lecture seule -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="refuse_reason" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
