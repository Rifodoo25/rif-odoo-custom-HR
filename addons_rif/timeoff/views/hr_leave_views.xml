<odoo>
    <!-- Remplacer le bouton Refuser par notre wizard -->
    <record id="view_hr_leave_form_inherit_refuse" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit.refuse</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <!-- Remplacer le bouton de refus -->
            <xpath expr="//button[@name='action_refuse']" position="replace">
                <button name="%(action_leave_refuse_wizard)d"
                        string="Refuser"
                        type="action"
                        class="btn-secondary"
                        invisible="not can_approve"/>
            </xpath>
            
            <!-- Ajouter le champ raison du refus -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="refuse_reason" 
                       invisible="state != 'refuse'"
                       readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>